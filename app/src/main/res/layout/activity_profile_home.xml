<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.msigl62.coworkandroiduset.ui.profile.ProfileUserFragment">

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="Profile"
        android:textSize="@dimen/text_title"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@id/profile"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:text="Please login for more information" />

    <ImageView
        android:id="@+id/imAboutUs"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/profileName"
        android:layout_marginTop="24dp"
        android:src="@drawable/tab_about">
    </ImageView>

    <ImageView
        android:id="@+id/imLogin"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/imAboutUs"
        android:src="@drawable/tab_about">
    </ImageView>

</RelativeLayout>
