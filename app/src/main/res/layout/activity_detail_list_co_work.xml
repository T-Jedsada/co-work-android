<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.msigl62.coworkandroiduset.detail.DetailListCoWork">

    <include layout="@layout/layout_toolbar" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/toolBarThem"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/cardview_dark_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:textSize="@dimen/text_title"
        android:id="@+id/nameCoWorking"
        android:padding="10sp"
        android:layout_below="@+id/container"
        android:text="Co-Working Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address"
        android:padding="10sp"
        android:layout_below="@+id/nameCoWorking"
        android:text="Suthep,Cjiangmai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
