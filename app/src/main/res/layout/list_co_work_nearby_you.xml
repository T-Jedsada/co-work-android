<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutListCoWorkNearby"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Toolbar
        android:layout_marginTop="29dp"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/co_working_nearby_you"
            android:layout_marginStart="16dp" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_marginTop="11dp"
            android:id="@+id/filter"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:src="@drawable/filter" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_marginTop="11dp"
            android:id="@+id/sha"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:src="@drawable/vector" />
    </Toolbar>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imLocal"
        android:layout_marginTop="7dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/toolBar"
        android:src="@drawable/local"
        android:layout_width="15dp"
        android:layout_height="12dp" />

    <android.support.v7.widget.AppCompatTextView
        android:textSize="10sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/textColor"
        android:layout_alignLeft="@+id/imLocal"
        android:textStyle="bold"
        android:id="@+id/textNearby"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/toolBar"
        android:text="NEARBY YOU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:textStyle="bold"
        android:id="@+id/textCoWorkChiangMai"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textNearby"
        android:text="@string/chiang_mai_thailand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/showAll"
        android:layout_marginRight="16dp"
        android:textSize="10sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textNearby"
        android:layout_width="42dp"
        android:layout_height="30dp"
        android:text="ShowAll" />

    <RelativeLayout
        android:layout_below="@+id/textCoWorkChiangMai"
        android:id="@+id/layout_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listCoWorkNearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</RelativeLayout>