<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCardViewPop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/imageCoWorkPopular"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@color/bb_inActiveBottomBarItemColor"
            android:clickable="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/favouritePop"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/favorite"
            android:layout_width="17dp"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/textCoWorkPopularName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="190dp"
            android:text="Co-Working Name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCoWorkPopularAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="212dp"
            android:text="Suthep, Chiangmai"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ratingTextPop"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_marginTop="212dp"
            tools:text="1.4"
            android:layout_width="25dp"
            android:layout_height="19dp" />

        <RatingBar
            android:layout_marginRight="50dp"
            android:layout_gravity="right"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:stepSize="8"
            android:layout_marginTop="213dp"
            android:isIndicator="true" />


    </android.support.v7.widget.CardView>
</RelativeLayout>