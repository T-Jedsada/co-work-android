<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/imageCoWorkPopular"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@color/bb_inActiveBottomBarItemColor"
            android:clickable="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textCoWorkPopularName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="190dp"
            android:text="Co-Working Name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCoWorkPopularAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="212dp"
            android:text="Suthep, Chiangmai"
            android:textSize="13sp" />

        <TextView
            android:textStyle="bold"
            android:layout_gravity="right"
            android:id="@+id/ratingTextPop"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageCoWorkPopular"
            android:layout_marginTop="212dp"
            android:text="1"
            android:textSize="13sp" />

        <ImageView
            android:layout_gravity="right"
            android:layout_width="48dp"
            android:layout_height="8dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="218dp"
            android:src="@drawable/rating" />

    </android.support.v7.widget.CardView>
</RelativeLayout>