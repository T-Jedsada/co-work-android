<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_below="@+id/toolBarThem"
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:bootstrapBrand="primary"
        app:hasBorder="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_marginTop="20dp"
        android:id="@+id/edt_Name"
        android:inputType="textFilter"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:hint="name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        />


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:inputType="textFilter"
        android:id="@+id/edt_Email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_Name"
        android:hint="gmail"
        android:padding="10dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_centerHorizontal="true"
        android:inputType="textFilter"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_Password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_Email"
        android:hint="password length 6 "
        android:padding="10dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textFilter"
        android:id="@+id/edt_re_Password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_Password"
        android:hint="repassword length 6 "
        android:padding="10dp" />

    <Button
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSubmit"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_re_Password"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_register" />

    <TextView
        android:id="@+id/textOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:text="OR" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnFacebook"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textOR"
        android:layout_centerHorizontal="true"
        android:text="@string/fb_btn" />

</RelativeLayout>
</ScrollView>