<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.msigl62.coworkandroiduset.ui.profile.ProfileUserFragment">

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/imageViewProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:bootstrapBrand="primary"
            app:hasBorder="true"
            tools:ignore="UnknownIdInLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/profile"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="sdsd" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_scan_qr"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/nameUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_states"
            android:text="@string/edit_profile"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/layOutChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameUser"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textChang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/change_password" />

            <View
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:layout_below="@+id/textChang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="150dp"
                android:layout_toEndOf="@+id/textChang"
                android:src="@drawable/arrowright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layOutPaymentHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layOutChangePassword"
            android:layout_marginStart="30dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textPaymentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/payment_history" />

            <View
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:layout_below="@+id/textPaymentHistory"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="159dp"
                android:layout_toEndOf="@+id/textPaymentHistory"
                android:src="@drawable/arrowright" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layOutAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layOutPaymentHistory"
            android:layout_marginStart="30dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/change_password" />

            <View
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:layout_below="@+id/textAboutUs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="151dp"
                android:layout_toEndOf="@+id/textAboutUs"
                android:src="@drawable/arrowright" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layOutLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layOutAboutUs"
            android:layout_marginStart="30dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/logOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/logout" />

            <View
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:layout_below="@+id/logOut"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="220dp"
                android:layout_toEndOf="@+id/logOut"
                android:src="@drawable/arrowright" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>